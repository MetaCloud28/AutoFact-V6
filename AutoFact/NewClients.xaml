<Page x:Class="AutoFact.NewClients"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:AutoFact"
      Title="Ajouter un Client" Foreground="#FFFFAEAE">

    <Grid Height="399" Width="235">
        <Grid.RowDefinitions>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="61*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="20,20,20,20" Grid.RowSpan="2">
            <Label Content="Nom" />
            <TextBox x:Name="nomTextBox" Margin="0,10"/>

            <Label Content="Téléphone" />
            <TextBox x:Name="telephoneTextBox" Margin="0,10"/>

            <Label Content="Adresse" />
            <TextBox x:Name="adresseTextBox" Margin="0,10"/>

            <Label Content="Email" />
            <TextBox x:Name="emailTextBox" Margin="0,10"/>

            <Button x:Name="submitBtn" Content="Enregistrer" Click="SubmitClientData" Margin="0,20"/>
        </StackPanel>
    </Grid>
</Page>
