<Page x:Class="AutoFact.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:AutoFact"
      Title="Page1">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#2F2E2A" CornerRadius="15" Grid.Row="0">
            <Label x:Name="Home_label" Content="HOME" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="36" Foreground="White" Margin="19,-6,0,0"/>
        </Border>

        <ListView x:Name="clientsListView" Margin="20"  Grid.Row="1"/>
        


        <Button x:Name="Newclient_btn" Content="Ajouter client" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20" Grid.Row="2" Click="Newclient_btn_Click"/>
    </Grid>
</Page>
